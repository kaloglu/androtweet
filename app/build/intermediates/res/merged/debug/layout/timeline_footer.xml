<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00aff0" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="999"
            android:id="@+id/selectedCount"
            android:textColor="#e9f6fd"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="were selected."
            android:id="@+id/selectedText"
            android:textColor="#e9f6fd"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_weight="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Selected"
            android:id="@+id/button2"
            android:background="@color/white"
            android:layout_margin="10dp" />
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/kaloglu/PersonalProjects/TweetApps/AndroTweet/app/src/main/res/layout/timeline_footer.xml -->