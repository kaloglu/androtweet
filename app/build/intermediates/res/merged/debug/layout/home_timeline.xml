<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Main" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#ffdff6ff"
        android:baselineAligned="false"
        android:weightSum="10"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center">

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/chk_selectAll"
            android:checked="false"
            android:layout_weight="4"
            android:contentDescription="@string/Select_All"
            android:text="@string/Select_All"
            android:button="@drawable/checkboxselector"
            android:layout_marginLeft="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical|center_horizontal"
            android:weightSum="6"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_Tweets"
                    android:text="@string/Tweets"
                    android:textSize="10sp" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chk_MyTweets"
                    android:checked="true"
                    android:layout_weight="1"
                    android:button="@drawable/checkboxselector" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_Mentions"
                    android:text="@string/Mentions"
                    android:textSize="10sp" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/chk_Mentions"
                    android:checked="true"
                    android:layout_weight="1"
                    android:button="@drawable/checkboxselector" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_RTs"
                    android:text="@string/RTs"
                    android:textSize="10sp" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/chk_RTs"
                    android:checked="true"
                    android:layout_weight="1"
                    android:button="@drawable/checkboxselector" />

            </LinearLayout>


        </LinearLayout>

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteTweet"
            android:onClick="doThings"
            android:layout_weight="1"
            android:src="@drawable/deletebutton"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Delete_Tweets" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshTweet"
            android:onClick="doThings"
            android:src="@drawable/refreshbutton"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/Refresh_Tweets" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/liste">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Not found any tweet yet! Click &quot;Refresh Tweet(s)&quot;"
            android:id="@+id/notFoundTweet"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff7c86c4"
            android:visibility="gone" />

        <ListView
            android:id="@+id/tweetList_on_home"
            android:layout_width="match_parent"
            android:layout_gravity="left|top"
            android:animateLayoutChanges="false"
            android:drawSelectorOnTop="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:choiceMode="singleChoice"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true">
        </ListView>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/kaloglu/PersonalProjects/TweetApps/AndroTweet/app/src/main/res/layout/home_timeline.xml -->